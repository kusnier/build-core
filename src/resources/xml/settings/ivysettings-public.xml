<?xml version="1.0"?>
<ivysettings>
  <resolvers>
    <chain name="public">
      <resolver ref="local"/>
      <url name="public-anonymous">
        <ivy pattern="http://xp-framework.net/repository/[organisation]/[module]/[revision]/ivy(-[branch])-[revision].xml"/>
        <artifact pattern="http://xp-framework.net/repository/[organisation]/[module]/[revision]/[artifact](-[branch])-[revision](-[classifier]).[ext]"/>
      </url>
    </chain>

    <ssh name="public-authenticated"
     keyFile="${user.home}/.ssh/id_dsa"
     user="cgi"
     host="xpsrv.net"
     publishPermissions="0644"
    >
      <ivy pattern="/home/httpd/xp.php3.de/doc_root/repository/[organisation]/[module]/[revision]/ivy(-[branch])-[revision].xml"/>
      <artifact pattern="/home/httpd/xp.php3.de/doc_root/repository/[organisation]/[module]/[revision]/[artifact](-[branch])-[revision](-[classifier]).[ext]"/>
    </ssh>
  </resolvers>

  <modules>
    <module organisation="net.xp_framework.*" name="*" resolver="public"/>
    <module organisation="net.xp_forge.*"     name="*" resolver="public"/>
  </modules>
</ivysettings>
