<?xml version="1.0" encoding="UTF-8"?>
<project name="xp-framework-plugin-hook" basedir=".">
  <macrodef name="run-plugins">
    <attribute name="target"/>
    <sequential>
      <subant target="{@target}" inheritall="true">
        <fileset dir="." includes="${build.target}/lib/plugin/*/plugin.xml"/>
      </subant>
    </sequential>
  </macrodef>

  <target name="plugin:clean" extensionOf="clean">
    <run-plugins target="clean"/>
  </target>

  <target name="plugin:prepare" extensionOf="prepare">
    <run-plugins target="prepare"/>
  </target>

  <target name="plugin:validate" extensionOf="validate">
    <run-plugins target="validate"/>
  </target>

  <target name="plugin:compile" extensionOf="compile">
    <run-plugins target="compile"/>
  </target>

  <target name="plugin:test" extensionOf="test">
    <run-plugins target="test"/>
  </target>

  <target name="plugin:integration-test" extensionOf="integration-test">
    <run-plugins target="integration-test"/>
  </target>

  <target name="plugin:package" extensionOf="package">
    <run-plugins target="package"/>
  </target>

  <target name="plugin:verify" extensionOf="verify">
    <run-plugins target="verify"/>
  </target>

  <target name="plugin:install" extensionOf="install">
    <run-plugins target="install"/>
  </target>

  <target name="plugin:publish" extensionOf="publish">
    <run-plugins target="publish"/>
  </target>

</project>
