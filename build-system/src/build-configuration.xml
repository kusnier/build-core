<?xml version="1.0" encoding="UTF-8"?>
<project name="xp-framework-build-configuration">

  <!--
   ! Section configuration
   !
   ! Configurable (public) settings
   !-->
  <path id="build.sourceDirectory">
    <path refid="build.sourceDirectory.php"/>
    <path refid="build.sourceDirectory.xsl"/>
  </path>
  <path id="build.sourceDirectory.php">
    <fileset dir="${basedir}/src/main/php"/>
  </path>
  <path id="build.sourceDirectory.xsl">
    <fileset dir="${basedir}/src/main/xsl"/>
  </path>
  <path id="build.sourceDirectory.xp">
    <fileset dir="${asedir}/src/main/xp" includes="**/*.xp"/>
  </path>
  <path id="build.testSourceDirectory" path="${basedir}/src/test/">
    <fileset dir="${basedir}/src/test/" includes="**/*"/>
  </path>
  <fileset id="build.testConfigurations" dir="${basedir}">
    <include name="unittest.ini"/>
  </fileset>
  <path id="build.webappSourceDirectory">
    <fileset dir="${basedir}/src/resources/" includes="webapp/**"/>
    <fileset dir="${basedir}/src/main/" includes="xsl/**"/>
  </path>
  <path id="build.configSourceDirectory">
    <fileset dir="${basedir}/src/resources/" includes="etc/**"/>
  </path>
  <path id="build.containerConfigDirectory">
    <fileset dir="${basedir}/src/resources/">
      <include name="container/*"/>
      <exclude name="**/*.properties"/>
    </fileset>
  </path>
</project>
