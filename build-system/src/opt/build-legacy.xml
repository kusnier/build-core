<?xml version="1.0" encoding="UTF-8"?>
<project name="xp-framework-build-configuration-legacy" basedir=".">

  <!--
   ! Section configuration
   !
   ! Configurable (public) settings
   !-->
  <fileset id="build.sources.fileset.php" dir="${basedir}/src" erroronmissingdir="false">
    <exclude name="**/unittest/**"/>
  </fileset>
  <fileset id="build.sources.fileset.xsl" dir="${basedir}/src" erroronmissingdir="false">
    <include name="**/*.xml"/>
    <include name="**/*.xsl"/>
  </fileset>

  <fileset id="build.testSourceDirectory" dir="${basedir}/src/" erroronmissingdir="false">
    <include name="**/unittest/**"/>
  </fileset>

  <fileset id="build.testConfigurations" dir="${basedir}">
    <include name="unittest.ini"/>
  </fileset>
  <path id="build.webappSourceDirectory">
    <fileset dir="${basedir}/doc_root/" includes="webapp/**"/>
  </path>
  <path id="build.configSourceDirectory">
    <fileset dir="${basedir}" includes="etc/**"/>
  </path>
  <path id="build.containerConfigDirectory">
    <fileset dir="${basedir}/src/resources/">
      <include name="container/*"/>
      <exclude name="**/*.properties"/>
    </fileset>
  </path>
</project>
