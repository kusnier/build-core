<?xml version="1.0"?>
<project name="xp-framework-svnexport">
  <property name="project.svn.url" value="http://svn.xp-framework.net/xp/trunk/"/>
  <available property="xp.checkout.exists" file="${basedir}/xp"/>

  <target name="xp.prepare" extensionOf="prepare" unless="xp.checkout.exists">
    <echo>===> Doing checkout for ${ivy.organisation}#${ivy.module}</echo>
    <exec executable="svn">
      <arg value="export"/>
      <arg value="${project.svn.url}"/>
      <arg value="xp"/>
    </exec>
  </target>
  
  <target name="xp.clean.checkout" extensionOf="clean">
    <delete dir="${basedir}/xp"/>
  </target>  
</project>
