<?xml version="1.0" encoding="UTF-8"?>
<project name="xp-framework-compile" basedir=".">
  <target name="xp.compile.sources" extensionOf="compile" depends="xp.compile.sources.php, xp.compile.sources.xsl"/>

  <target name="xp.compile.sources.php">
    <copy todir="${build.target.classes}">
      <fileset refid="build.sources.fileset.php"/>
      <cutdirsmapper dirs="1"/>
    </copy>
  </target>

  <target name="xp.compile.sources.xsl">
    <copy todir="${build.target.classes}">
      <fileset refid="build.sources.fileset.xsl"/>
      <cutdirsmapper dirs="1"/>
    </copy>
  </target>

  <target name="xp.compile.sources.xp">
    <path refid="build.sourceDirectory.xp"/>
    <!-- TODO: Call "xcc" -->
  </target>

  <target name="xp.compile.tests" extensionOf="compile">
    <mkdir dir="${build.target.testClasses}"/>
    <copy todir="${build.target.testClasses}">
      <fileset refid="build.testSourceDirectory"/>
      <cutdirsmapper dirs="1"/>
    </copy>
  </target>

</project>