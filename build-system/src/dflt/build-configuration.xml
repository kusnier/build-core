<?xml version="1.0" encoding="UTF-8"?>
<project name="xp-framework-build-configuration" basedir=".">

  <!--
   ! Section configuration
   !
   ! Configurable (public) settings
   !-->
  <fileset id="build.sources.fileset.php" dir="${build.sourceDirectory}/src/main/php" erroronmissingdir="false">
    <include name="**/*"/>
  </fileset>
  <fileset id="build.sources.fileset.xsl" dir="${build.sourceDirectory}/src/main/xsl" erroronmissingdir="false">
    <include name="**/*"/>
  </fileset>
  <fileset id="build.testSourceDirectory" dir="${basedir}/src/test/" erroronmissingdir="false"/>
  <fileset id="build.testConfigurations" dir="${basedir}">
    <include name="unittest.ini"/>
  </fileset>

  <!-- Override default publish resolver - defaults to "shared", override in build.xml -->
  <!-- property name="ivy.publish.resolver" value="shared"/ -->

  <!-- Required in build-webapp -->
  <path id="build.webappSourceDirectory">
    <fileset dir="${basedir}/src/resources/" includes="webapp/**"/>
  </path>
  <path id="build.configSourceDirectory">
    <fileset dir="${basedir}/src/resources/" includes="etc/**"/>
  </path>
  <path id="build.containerConfigDirectory">
    <fileset dir="${basedir}/src/resources/">
      <include name="container/*"/>
      <exclude name="**/*.properties"/>
    </fileset>
  </path>

</project>
