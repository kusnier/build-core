<?xml version="1.0"?>
<project name="xp-framework-loader">

  <!-- To override the location where XP build scripts are picked up,
   !   supply a value for xp.build.home in your environment or
   !   ant script.
   !-->
  <condition property="xp.build.home" value="${env.XPBUILD_HOME}">
    <isset property="env.XPBUIL_HOME"/>
  </condition>
  <property name="xp.build.home" value="${user.home}/.ant/xp-build"/>

  <!-- Import files -->
  <import>
    <filelist dir="${xp.build.home}" files="build-installivy.xml
      build-lifecycle.xml
      build-master.xml
      build-xpmacro.xml"
    />
  </import>
</project>
