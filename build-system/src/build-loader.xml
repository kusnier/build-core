<?xml version="1.0"?>
<project name="xp-framework-loader">
  <property name="xp.ant.build.dir" value="${user.home}/.ant/build/"/>
  <property name="xp.ant.lazy" value="true"/>
  
  <echo>Bootstrap loading build process from base ${xp.ant.url}</echo>
  <mkdir dir="${xp.ant.build.dir}"/>
  <get src="${xp.ant.url}/build-installivy.xml" dest="${xp.ant.build.dir}" skipexisting="${xp.ant.lazy}"/>
  <get src="${xp.ant.url}/build-lifecycle.xml" dest="${xp.ant.build.dir}" skipexisting="${xp.ant.lazy}"/>
  <get src="${xp.ant.url}/build-master.xml" dest="${xp.ant.build.dir}" skipexisting="${xp.ant.lazy}"/>
  <get src="${xp.ant.url}/build-xpmacro.xml" dest="${xp.ant.build.dir}" skipexisting="${xp.ant.lazy}"/>
  <get src="${xp.ant.url}/ivysettings.xml" dest="${xp.ant.build.dir}" skipexisting="${xp.ant.lazy}"/>
  <get src="${xp.ant.url}/ivysettings-public.xml" dest="${xp.ant.build.dir}" skipexisting="${xp.ant.lazy}"/>

  <import>
    <fileset dir="${xp.ant.build.dir}" includes="build-*.xml"/>
  </import>
</project>
